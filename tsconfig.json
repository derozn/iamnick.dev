{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "incremental": true
  },
  "exclude": ["node_modules", ".templates/*", "__tests__/**/*", "__mocks__/**/*", "build"],
  "typeRoots": ["./node_modules/@types"]
}
