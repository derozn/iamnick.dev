{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "#*": ["src/*"],
      "test/*": ["test/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", ".templates/*"],
  "typeRoots": ["./@types", "./node_modules/@types"],
  "include": [
    "./@types/**/*",
    "next-env.d.ts",
    "test/**/*",
    "src/**/*",
    "plugins/**/*",
    ".eslintrc.js",
    "babel.config.js",
    "next.config.js"
  ]
}
